<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="12dp" /> <!-- Corner radius (match your shape) -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" /> <!-- Shadow size -->
        </shape>
    </item>

    <!-- Gradient Shape -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0891b2"
                android:endColor="#22d3ee"
                android:angle="90" />
            <corners android:radius="12dp" /> <!-- Corner radius (match shadow) -->
        </shape>
    </item>
</layer-list>