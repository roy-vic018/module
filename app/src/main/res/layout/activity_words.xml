<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar with Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/system_accent1_900"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="NewApi">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Learn Words"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:gravity="start|center_vertical"
                android:paddingStart="70dp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add buttons for each word -->
            <Button
                android:id="@+id/btnBye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:text="Bye"
                android:textSize="20sp"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi" />

            <!-- Repeat for other words -->
            <Button
                android:id="@+id/btnHello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:text="Hello"
                android:textSize="20sp"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi" />

            <Button
                android:id="@+id/btnThankYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:text="Thank You"
                android:textSize="20sp"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi" />

            <Button
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:text="Yes"
                android:textSize="20sp"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi" />

            <Button
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:text="No"
                android:textSize="20sp"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi" />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</layout>