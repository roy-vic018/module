<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar with Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_shape"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="16dp"
            tools:ignore="NewApi">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:paddingStart="50dp"
                android:paddingTop="1.8dp"
                android:text="Learn Words "
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>

        <!-- Letters Grid (Scrollable) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Add buttons for each word category -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoodmorning"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Magandang Umaga"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoodafternoon"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Magandang Hapon"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoodevening"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Magandang Gabi"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTakecare"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Ingat ka"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBye"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Paalam"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHelp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Help"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Doctor"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHospital"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Hospital"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPolice"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Police"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPainful"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Painful/Hurt"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/bakbak_one"
                    android:text="Emergency"
                    android:textColor="#E2D9D9"
                    android:textSize="25sp"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,NewApi" />

                <!-- You can add additional category buttons (Transportation, Food, Daily Activities) here -->
            </LinearLayout>
        </ScrollView>

        <!-- Quiz CardView at Bottom (Always visible) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="19dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/btn2_bg_ripple"
                android:orientation="horizontal"
                android:padding="35dp">

                <ImageView
                    android:id="@+id/imgQuizIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@raw/animated_locked" />

                <TextView
                    android:id="@+id/txtQuizLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="TAKE WORDS QUIZ"
                    android:fontFamily="@font/black_ops_one"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cardBackgroundColor="@color/material_dynamic_primary20"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
