<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar with Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/system_accent1_900"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="NewApi">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Learn Numbers"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:gravity="start|center_vertical"
                android:paddingStart="70dp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add buttons for each number 1-10 -->
            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="1"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="2"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="3"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="4"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="5"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="6"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="7"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="8"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="9"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/system_accent1_700"
                android:textSize="20sp"
                android:text="10"
                android:textColor="#E2D9D9"
                tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</layout>