<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_shape"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="NewApi">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:paddingTop="1.8dp"
                android:text="Learn Numbers"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>

        <!-- Numbers Grid -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/numbersGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:columnCount="3"
                app:rowCount="4">

                <!-- Example for button 0 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="0"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:rippleColor="@android:color/holo_blue_light" />

                <!-- Button 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="1"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:rippleColor="@android:color/holo_blue_light" />

                <!-- Button 2 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="2"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:rippleColor="@android:color/holo_blue_light" />

                <!-- Row 1: Buttons 3, 4, 5 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="3"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:rippleColor="@android:color/holo_blue_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="4"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:rippleColor="@android:color/holo_blue_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="5"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:rippleColor="@android:color/holo_blue_light" />

                <!-- Row 2: Buttons 6, 7, 8 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="6"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:rippleColor="@android:color/holo_blue_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="7"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:rippleColor="@android:color/holo_blue_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="8"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:rippleColor="@android:color/holo_blue_light" />

                <!-- Row 3: Button 9 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn2_bg_ripple"
                    android:fontFamily="@font/lemon"
                    android:text="9"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:rippleColor="@android:color/holo_blue_light" />

            </androidx.gridlayout.widget.GridLayout>
        </ScrollView>

        <!-- Quiz CardView at Bottom -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="19dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn2_bg_ripple"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="35dp">

                <ImageView
                    android:id="@+id/imgQuizIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@raw/animated_locked" />

                <TextView
                    android:id="@+id/txtQuizLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="TAKE NUMBERS QUIZ"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cardBackgroundColor="@color/material_dynamic_primary20"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
