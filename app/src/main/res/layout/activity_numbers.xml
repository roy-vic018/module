<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/system_accent1_900"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="NewApi">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Learn Numbers"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>

        <!-- Numbers Grid -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/numbersGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:columnCount="3"
                app:rowCount="4">

                <!-- Row 0 -->
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="1"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="2"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="3"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <!-- Row 1 -->
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="4"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="5"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="6"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <!-- Row 2 -->
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="7"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="8"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="9"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

                <!-- Row 3 -->
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="0"
                    android:textSize="35sp"
                    android:backgroundTint="@android:color/system_accent1_700"
                    android:textColor="#E2D9D9"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    android:layout_margin="4dp"
                    tools:ignore="HardcodedText,NewApi" />

            </androidx.gridlayout.widget.GridLayout>
        </ScrollView>
    </LinearLayout>
</layout>