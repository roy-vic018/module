<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondaryFixedDim"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Updated Numbers CardView section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/material_dynamic_primary20"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_number"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/numbersProgress"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|start"
                            app:indicatorColor="@color/green_500"
                            app:trackColor="@color/darkBlue"
                            app:trackThickness="8dp"
                            app:indicatorSize="60dp" />

                        <TextView
                            android:id="@+id/tvNumbersPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="25dp"
                            android:fontFamily="@font/bakbak_one"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </FrameLayout>

                    <Button
                        android:id="@+id/btnNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn2_bg_ripple"
                        android:fontFamily="@font/wendy_one"
                        android:textSize="20sp"
                        app:backgroundTint="@null"
                        android:text="LEARN NUMBERS"
                        android:textColor="#E2D9D9"
                        tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Inside the Letters CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/material_dynamic_primary20"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_letter"
                            tools:ignore="ContentDescription" />

                        <!-- Add this progress indicator -->
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/lettersProgress"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|start"
                            app:indicatorColor="@color/green_500"
                            app:trackColor="@color/darkBlue"
                            app:trackThickness="8dp"
                            app:indicatorSize="60dp" />

                        <TextView
                            android:id="@+id/tvLettersPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="25dp"
                            android:fontFamily="@font/bakbak_one"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </FrameLayout>

                    <Button
                        android:id="@+id/btnLetters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn2_bg_ripple"
                        android:fontFamily="@font/wendy_one"
                        android:textSize="20sp"
                        app:backgroundTint="@null"
                        android:text="LEARN ALPHABET"
                        android:textColor="#E2D9D9"
                        tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Words CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/material_dynamic_primary20"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_word"
                            tools:ignore="ContentDescription" />

                        <!-- Add this progress indicator -->
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/wordsProgress"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|start"
                            app:indicatorColor="@color/green_500"
                            app:trackColor="@color/darkBlue"
                            app:trackThickness="8dp"
                            app:indicatorSize="60dp" />

                        <TextView
                            android:id="@+id/tvWordsPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="25dp"
                            android:fontFamily="@font/bakbak_one"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/btnWords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn2_bg_ripple"
                        android:fontFamily="@font/wendy_one"
                        android:textSize="20sp"
                        app:backgroundTint="@null"
                        android:text="LEARN WORDS"
                        android:textColor="#E2D9D9"
                        tools:ignore="HardcodedText,NewApi,VisualLintButtonSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quiz CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/material_dynamic_primary20"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Quiz Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/wendy_one"
                        android:gravity="center"
                        android:text="Take a Quiz"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,TextContrastCheck" />

                    <!-- Quiz Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/afacad_medium"
                        android:gravity="center"
                        android:text="Test your knowledge of letters, numbers, and words!"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TextContrastCheck" />

                    <!-- Start Quiz Button -->
                    <Button
                        android:id="@+id/btnStartQuiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2_bg_ripple"
                        android:fontFamily="@font/wendy_one"
                        android:textSize="20sp"
                        app:backgroundTint="@null"
                        android:text="START QUIZ"
                        android:textColor="#E2D9D9"
                        tools:ignore="HardcodedText,NewApi,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>
