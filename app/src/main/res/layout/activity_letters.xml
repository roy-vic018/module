                    android:text="A"
                    android:textColor="#E2D9D9"
                    android:textSize="35sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:rippleColor="@android:color/holo_blue_light" />

